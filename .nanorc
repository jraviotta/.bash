# include /usr/local/share/nano/*.nanorc
# include /usr/share/nano/*.nanorc

# Custom nano configuration
# https://www.geoffreybrown.com/blog/nano-keystroke-configuration/
#####################################################
##################### Options #######################
#####################################################
set autoindent
set morespace
set multibuffer
set quickblank
set mouse
#set nohelp
set regexp
set smooth
set smarthome
set softwrap
set suspend
set tabsize 4
set tabstospaces
#set tempfile

#####################################################
################## Key bindings #####################
#####################################################
unbind ^K main
unbind ^U main
unbind ^W main

bind ^O insert main
bind ^S writeout main
bind ^Q exit main
bind ^P prevword main
bind ^N nextword main
bind ^B firstline main
bind ^E lastline main
bind ^L curpos main
bind ^J gotoline main

bind ^Space mark main
bind ^X cut main
bind ^C copy main
bind ^V paste main

bind ^F whereis main
bind ^R replace main

bind ^Z undo main
bind ^Y redo main

bind M-H nohelp main
bind M-/ comment main
bind M-Z suspend main


